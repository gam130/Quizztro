<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".CategoriesActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/categoriesbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/catButton1"
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/catbutton"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/chooseText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:text="FBLA History"
                    android:textColor="@color/colorPrimaryDark" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                android:id="@+id/catButton2"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/catbutton" />

                <TextView
                    android:id="@+id/chooseText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:textSize="22sp"
                    android:text="Events"
                    android:textColor="@color/colorPrimaryDark" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/catButton3"
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/catbutton" />

                <TextView
                    android:id="@+id/chooseText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:textSize="22sp"
                    android:text="NLC Dates and Locations"
                    android:textColor="@color/colorPrimaryDark" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/catButton4"
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/catbutton" />

                <TextView
                    android:id="@+id/chooseText4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:textSize="22sp"
                    android:text="Parliamentary Procedure"
                    android:textColor="@color/colorPrimaryDark" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/catButton5"
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/catbutton" />

                <TextView
                    android:id="@+id/chooseText5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:textSize="22sp"
                    android:text="Business Skills"
                    android:textColor="@color/colorPrimaryDark" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/catButton6"
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/catbutton"
                    android:layout_marginBottom="90dp"/>

                <TextView
                    android:id="@+id/chooseText6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:textSize="22sp"
                    android:text="Random"
                    android:layout_marginBottom="45dp"
                    android:textColor="@color/colorPrimaryDark" />
            </FrameLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>